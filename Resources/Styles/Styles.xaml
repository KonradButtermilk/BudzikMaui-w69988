<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <!-- Style nagłówka -->
    <Style x:Key="Heading" TargetType="Label">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="TextColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
    </Style>
    <Style x:Key="Subheading" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="{DynamicResource SecondaryColor}" />
    </Style>
    <Style x:Key="SubheadingMonth" TargetType="Label" BasedOn="{StaticResource Subheading}" />
    <Style x:Key="SubheadingDayNumber" TargetType="Label" BasedOn="{StaticResource Subheading}" />
    <!-- Style przycisków -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
        <Setter Property="TextColor" Value="White" />
    </Style>
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource SecondaryColor}" />
        <Setter Property="TextColor" Value="White" />
    </Style>
    <Style x:Key="DangerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource DangerColor}" />
        <Setter Property="TextColor" Value="White" />
    </Style>

    <!-- Dodatkowe style dla strony alarmu -->
    <Style x:Key="DangerPage" TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{DynamicResource DangerColor}" />
    </Style>
    <Style x:Key="DangerEntry" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="Black" />
    </Style>
</ResourceDictionary>
